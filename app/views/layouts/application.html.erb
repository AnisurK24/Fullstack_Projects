<!DOCTYPE html>
<html>
  <head>
    <title>Turbo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag asset_path('favicon2.ico') %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    
    <script type="text/javascript">
      window.xclose = "<%= image_url('x-close.png') %>";
    </script>

    <script type="text/javascript">
      window.turbo = "<%= image_url('turbo-logo.jpeg') %>";
    </script>

    <script type="text/javascript">
      window.profileicon = "<%= image_url('profile-icon.png') %>";
    </script>

    <script type="text/javascript">
      window.modalbg = "<%= image_url('modal-bg.jpg') %>";
    </script>

    <script type="text/javascript">
      window.liberty = "<%= image_url('insurance-fr.png') %>";
    </script>

    <script type="text/javascript">
      window.heroporsche = "<%= image_url('hero-porsche-coast.jpg') %>";
    </script>

    <script type="text/javascript">
      window.google = "<%= image_url('google.png') %>";
    </script>

    <script type="text/javascript">
      window.porsche = "<%= image_url('porsche.jpg') %>";
    </script>

    <script type="text/javascript">
      window.filters = "<%= image_url('filters.png') %>";
    </script>




    
    <% if logged_in? %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>",
          "first_name": "<%= current_user.first_name %>",
          "first_name": "<%= current_user.first_name %>"
        };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
